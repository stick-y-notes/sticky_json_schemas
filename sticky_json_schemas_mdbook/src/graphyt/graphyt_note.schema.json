{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Graphyt Note",
  "description": "A schema for a single note in the Graphyt application.",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier for the note.",
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "description": "The title of the note.",
      "type": "string"
    },
    "color": {
      "description": "Background color for the note card in hex format.",
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}$"
    },
    "tags": {
      "description": "An array of keywords or labels for categorization.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "createdAt": {
      "description": "The ISO timestamp when the note was created.",
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "description": "The ISO timestamp when the note was last modified.",
      "type": "string",
      "format": "date-time"
    },
    "pinned": {
      "description": "A boolean indicating if the note is pinned to the top.",
      "type": "boolean"
    },
    "content": {
      "description": "The content of the note, composed of different block types.",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": { "const": "h1" },
              "text": { "type": "string" }
            },
            "required": ["type", "text"]
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "h2" },
              "text": { "type": "string" }
            },
            "required": ["type", "text"]
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "h3" },
              "text": { "type": "string" }
            },
            "required": ["type", "text"]
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "h4" },
              "text": { "type": "string" }
            },
            "required": ["type", "text"]
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "h5" },
              "text": { "type": "string" }
            },
            "required": ["type", "text"]
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "h6" },
              "text": { "type": "string" }
            },
            "required": ["type", "text"]
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "p" },
              "text": { "type": "string" }
            },
            "required": ["type", "text"]
          },
          {
            "type": "object",
            "properties": {
              "type": { "const": "checkbox" },
              "label": { "type": "string" },
              "checked": { "type": "boolean" }
            },
            "required": ["type", "label", "checked"]
          }
        ]
      }
    }
  },
  "required": ["id", "title", "createdAt", "updatedAt", "content"]
}
