{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Graphyt Color Palette",
  "description": "A schema for a color palette in the Graphyt ecosystem.",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier for the palette.",
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "description": "The name of the color palette.",
      "type": "string"
    },
    "colors": {
      "description": "An array of hex color codes.",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^#[0-9a-fA-F]{6}$"
      },
      "minItems": 1
    }
  },
  "required": ["id", "name", "colors"]
}
