{
  "$id": "https://stickyschema.near.page/graphyt/v2/color_palette.schema.json",
  "title": "Graphyt Color Palette",
  "type": "object",
  "properties": {
    "color_palette": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable name for the palette."
        },
        "colors": {
          "type": "array",
          "description": "List of hex colors in the palette.",
          "items": {
            "type": "string",
            "pattern": "^#[0-9a-fA-F]{6}$"
          },
          "minItems": 1
        }
      },
      "required": ["name", "colors"],
      "additionalProperties": true
    }
  },
  "required": ["color_palette"],
  "additionalProperties": false
}
