{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://stickyschema.near.page/bible/bible_book.schema.json",
    "title": "Bible Book",
    "description": "A schema for a book of the Bible.",
    "type": "object",
    "properties": {
        "book": {
            "type": "string",
            "description": "The name of the book."
        },
        "chapters": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "chapter": {
                        "type": "string",
                        "description": "The chapter number."
                    },
                    "verses": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "verse": {
                                    "type": "string",
                                    "description": "The verse number."
                                },
                                "text": {
                                    "type": "string",
                                    "description": "The text of the verse."
                                }
                            },
                            "required": ["verse", "text"]
                        }
                    }
                },
                "required": ["chapter", "verses"]
            }
        }
    },
    "required": ["book", "chapters"]
}
